<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPictureToPlant"
    android:background="@drawable/proba3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/preview"
            android:contentDescription="@string/preview_content_description"
            android:elevation="1dp"
            android:layout_margin="10dp"
            android:background="#88CEF0D3"
            />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pic_choose_from_gallery"
                android:id="@+id/chooseFromGalleryButton"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pic_take_picture"
                android:id="@+id/takePictureButton"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:id="@+id/cancel"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pic_save_image"
                android:id="@+id/saveImages"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pic_modify_date"
            android:id="@+id/pic_modify_date"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>